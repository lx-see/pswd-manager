<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1768AC"
        tools:context=".MainActivity" android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@color/white"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginBottom="8sp"
                  android:gravity="right">

        <Button android:layout_width="60sp" android:layout_height="60sp"
                android:id="@+id/add_btn"
                android:background="@drawable/ic_add_filled"
                android:layout_marginRight="5sp"
                android:layout_gravity="center_horizontal"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:id="@+id/reset_password_btn"
                android:text="Reset Password"
                android:layout_marginRight="5sp"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent" android:layout_height="wrap_content"
                                               android:id="@+id/re_view"
                                               app:layout_constraintBottom_toBottomOf="parent"
                                               app:layout_constraintLeft_toLeftOf="parent"
                                               app:layout_constraintRight_toRightOf="parent"
                                               app:layout_constraintTop_toTopOf="parent"
                                               android:layout_marginTop="8sp"
                                               />

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center">
        <ImageView android:layout_width="500sp" android:layout_height="230dp"
                   android:src="@mipmap/half_round_1"
                   android:orientation="vertical"
                   android:layout_gravity="bottom" android:rotation="180"
                   android:rotationY="180" android:translationY="50sp"/>
    </LinearLayout>
</LinearLayout>