<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent">
        <ImageView android:layout_width="100sp" android:layout_height="100sp"
                   android:src="@mipmap/logo2"
                   android:orientation="vertical"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="20sp"
                   android:layout_marginBottom="20sp"
                   android:layout_gravity="center"/>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/pin_number">
            <TextView android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textColor="#718369"
                      android:layout_gravity="center"
                      android:textAlignment="center"
                      android:layout_marginLeft="40sp"
                      android:layout_marginRight="40sp"
                      android:layout_marginBottom="40sp"
                      android:text="Set up your safety questions to reset PIN Number if forget PIN Number" />
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/enter_pin_background"
                android:id="@+id/pin_number_input">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Safety Questions"
                      android:textColor="#718369"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                      android:layout_marginTop="20sp"
                      android:layout_marginBottom="20sp"
                      android:textStyle="bold"
                      android:textSize="14sp" />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:paddingTop="9sp"
                    android:paddingBottom="9sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/security_question_background">
                <TextView android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:textColor="#FFFFFF"
                          android:layout_gravity="left"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:paddingBottom="15sp"
                          android:text="1. Your birthday month"/>
                <EditText android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:id="@+id/birthdayMonth"
                          android:ellipsize="start"
                          android:gravity="center_horizontal"
                          android:textColor="#718369"
                          android:textColorHint="#A1A1A1"
                          android:layout_gravity="center"
                          android:minWidth="200dip"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:background="@drawable/security_question_ans_background"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:paddingTop="9sp"
                    android:paddingBottom="9sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/security_question_background">

                <TextView android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:textColor="#FFFFFF"
                          android:layout_gravity="left"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:paddingBottom="15sp"
                          android:text="2. Your father's birthday month"/>

                <EditText android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:id="@+id/fatherBirthdayMonth"
                          android:ellipsize="start"
                          android:gravity="center_horizontal"
                          android:textColor="#718369"
                          android:textColorHint="#A1A1A1"
                          android:layout_gravity="center"
                          android:minWidth="200dip"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:background="@drawable/security_question_ans_background"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:paddingTop="9sp"
                    android:paddingBottom="9sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/security_question_background">

                <TextView android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:textColor="#FFFFFF"
                          android:layout_gravity="left"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:paddingBottom="15sp"
                          android:text="3. Your mother's birthday month"/>

                <EditText android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:id="@+id/motherBirthdayMonth"
                          android:ellipsize="start"
                          android:gravity="center_horizontal"
                          android:textColor="#718369"
                          android:textColorHint="#A1A1A1"
                          android:layout_gravity="center"
                          android:minWidth="200dip"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:background="@drawable/security_question_ans_background"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:paddingTop="9sp"
                    android:paddingBottom="9sp"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/security_question_background">

                <TextView android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:textColor="#FFFFFF"
                          android:layout_gravity="left"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:paddingBottom="15sp"
                          android:text="4. Your favourite color"/>

                <EditText android:layout_height="wrap_content"
                          android:layout_width="match_parent"
                          android:id="@+id/favouriteColor"
                          android:ellipsize="start"
                          android:gravity="center_horizontal"
                          android:textColor="#718369"
                          android:textColorHint="#A1A1A1"
                          android:layout_gravity="center"
                          android:minWidth="200dip"
                          android:layout_marginLeft="20sp"
                          android:layout_marginRight="20sp"
                          android:background="@drawable/security_question_ans_background"/>
            </LinearLayout>

            <Button android:layout_width="wrap_content" android:layout_height="35sp"
                    android:text="Confirm"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_background"
                    android:id="@+id/safety_question_button"
                    android:layout_gravity="center"
            />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>